<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="2"
    tools:context=".viewModel.SelectorActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewImdiscor"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:onClick="onCardViewClicked"
        app:cardBackgroundColor="@color/cardViewImdiscor">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:contentDescription="@string/imdiscor"
            android:src="@drawable/imdiscor_logo" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewDimcorp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:onClick="cardClickedDimcorp"
        app:cardBackgroundColor="@color/cardViewDimcorp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:contentDescription="@string/dimcorp"
            android:src="@drawable/dimcorp_logo" />
    </androidx.cardview.widget.CardView>

</LinearLayout>